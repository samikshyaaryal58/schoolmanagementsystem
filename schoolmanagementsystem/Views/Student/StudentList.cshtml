@model schoolmanagementsystem.Models.ViewModels.StudentListViewModel;


<div class="d-flex justify-content-between my-3">
    <h2>All Students   </h2>

    <a href="@Url.Action("AddStudent", "Student")" class="btn btn-primary mt-2">Add Student</a>
</div>
<div class="row row-cols-1 row-cols-md-3 g-4">



    @foreach (var student in Model.Students)
    {
        <div class="col">


            <div class="card pie-card">
                <img src="@student.Picture" class="card-img-top img" alt="@student.Name">
                <div class="card-body pie-button">

                    <div class="d-flex justify-content-between mt-2">
                        <h2 class="text-start">
                            <a class="pie-link text-decoration-none text-dark">@student.Name</a>

                        </h2>
                        <h3>@student.Address</h3>

                    </div>
                    <div class="d-flex justify-content-between">

                        <a href="@Url.Action("UpdateStudent", "Student", new { id = student.StudentId })" class="btn btn-primary mt-2">Edit Student</a>


                        <a href="@Url.Action("DeleteStudent", "Student", new { id = student.StudentId })" class="btn btn-danger mt-2">Delete</a>
                    </div>

                </div>
            </div>

        </div>
    }

</div>