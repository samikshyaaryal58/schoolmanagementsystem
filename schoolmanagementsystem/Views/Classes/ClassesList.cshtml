@model schoolmanagementsystem.Models.ClassesViewModels.ClassesListViewModel;

<style>
    /* Custom styles */
    .student-card {
        border: 1px solid #ccc;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
    }

        .student-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .student-img {
        height: 200px;
        object-fit: cover;
        border-bottom: 1px solid #eee;
    }

    .student-info {
        padding: 20px;
    }

    .student-name {
        font-size: 20px;
        font-weight: bold;
        color: #333;
    }

    .student-address {
        font-size: 16px;
        color: #666;
        margin-top: 10px;
    }


    .btn-delete {
        background-color: crimson;
        color: #fff;
        border: none;
        padding: 8px 16px;
        font-size: 14px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
    }


        .btn-delete:hover {
            background-color: crimson;
        }
</style>

<div class="container mt-3">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="mb-0">All Classes</h2>
                <a href="@Url.Action("AddClasses", "Classes")" class="btn btn-primary">Add Classes</a>
            </div>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var classes in Model.Classes)
        {
            <div class="col mb-4">
                <div class="card h-100 shadow-sm student-card">
                    <div class="card-body classses-info">
                        <h5 class="card-title classes-name">@classes.Name</h5>
                        <p class="card-text classes-Section">@classes.Section</p>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("UpdateClasses", "Classes", new { id = classes.ClassesId })" class="btn btn-primary">Edit</a>
                            <a href="@Url.Action("DeleteClasses", "Classes", new { id = classes.ClassesId })" class="btn btn-delete">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>